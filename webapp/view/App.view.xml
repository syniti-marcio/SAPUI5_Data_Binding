<mvc:View 
    controllerName="sap.ui.demo.db.controller.App"
    xmlns="sap.m" 
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout">
    
    <Panel
        headerText="{i18n>mainPanelHeaderText}"
        class="sapUiResponsiveMargin"
        width="auto">
        
        <form:SimpleForm
            editable="true"
            layout="GridLayout">
            
            <Label
                text="{i18n>firstName}" />
            
            <Input
                value="{/firstName}"
                valueLiveUpdate="true" 
                width="200px" 
                enabled="{/enabled}" />
            
            <Label
                text="{i18n>lastName}" />
            
            <Input
                value="{/lastName}"
                valueLiveUpdate="true" 
                width="200px" 
                enabled="{/enabled}" />
            
            <Label
                text="{i18n>enabled}" />
            
            <CheckBox
                selected="{/enabled}"/>
            
        </form:SimpleForm>

    </Panel>

    <Panel 
        headerText="{i18n>addressPanelHeaderText}"
        class="sapUiResponsiveMargin"
        width="auto">
        <content>
            <l:VerticalLayout>
                <Label 
                    labelFor="address"
                    text="{i18n>address}:" />
                
                <FormattedText 
                    id="address"
                    class="sapUiSmallMarginBottom"
                    htmlText="{/address/street}&lt;br&gt;{/address/city}&lt;br&gt;{/address/zip}&lt;br&gt;{/address/country}"
                    width="200px" />
                
                <Link 
                    href="{
                        parts: [
                            '/firstName',
                            '/lastName'
                        ],
                        formatter: '.formatEmail'
                    }" 
                    text="{i18n>sendEmail}" />
            </l:VerticalLayout>
        </content>
    </Panel>

</mvc:View>